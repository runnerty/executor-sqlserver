{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "@runnerty-executor-sqlserver",
  "definitions": {
    "config": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "pattern": "@runnerty-executor-sqlserver"
        },
        "user": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "server": {
          "type": "string"
        },
        "port": {
          "type": "number"
        },
        "domain": {
          "type": "string"
        },
        "database": {
          "type": "string"
        },
        "connectTimeout": {
          "type": "number"
        },
        "requestTimeout": {
          "type": "number"
        },
        "pool": {
          "type": "object",
          "properties": {
            "max": {
              "type": "number"
            },
            "min": {
              "type": "number"
            },
            "idleTimeoutMillis": {
              "type": "number"
            }
          }
        },
        "options": {
          "type": "object",
          "properties": {
            "abortTransactionOnError": {
              "type": "boolean"
            },
            "appName": {
              "type": "string"
            },
            "camelCaseColumns": {
              "type": "boolean"
            },
            "cancelTimeout": {
              "type": "number"
            },
            "columnNameReplacer": {
              "type": "string"
            },
            "connectionRetryInterval": {
              "type": "number"
            },
            "connectionIsolationLevel": {
              "type": "string"
            },
            "cryptoCredentialsDetails": {
              "type": "object"
            },
            "debug": {
              "type": "object",
              "properties": {
                "datefirst": {
                  "type": "number"
                },
                "dateFormat": {
                  "type": "string"
                },
                "packet": {
                  "type": "boolean"
                },
                "data": {
                  "type": "boolean"
                },
                "payload": {
                  "type": "boolean"
                },
                "token": {
                  "type": "boolean"
                }
              }
            },
            "enableAnsiNull": {
              "type": "boolean"
            },
            "enableAnsiNullDefault": {
              "type": "boolean"
            },
            "enableAnsiPadding": {
              "type": "boolean"
            },
            "enableAnsiWarnings": {
              "type": "boolean"
            },
            "enableArithAbort": {
              "type": "boolean"
            },
            "enableConcatNullYieldsNull": {
              "type": "boolean"
            },
            "enableCursorCloseOnCommit": {
              "type": "boolean"
            },
            "enableImplicitTransactions": {
              "type": "boolean"
            },
            "enableNumericRoundabort": {
              "type": "boolean"
            },
            "enableQuotedIdentifier": {
              "type": "boolean"
            },
            "encrypt": {
              "type": "boolean"
            },
            "fallbackToDefaultDb": {
              "type": "boolean"
            },
            "instanceName": {
              "type": "string"
            },
            "isolationLevel": {
              "type": "string"
            },
            "language": {
              "type": "string"
            },
            "localAddress": {
              "type": "string"
            },
            "maxRetriesOnTransientErrors": {
              "type": "number"
            },
            "multiSubnetFailover": {
              "type": "boolean"
            },
            "packetSize": {
              "type": "number"
            },
            "readOnlyIntent": {
              "type": "boolean"
            },
            "rowCollectionOnDone": {
              "type": "boolean"
            },
            "rowCollectionOnRequestCompletion": {
              "type": "boolean"
            },
            "tdsVersion": {
              "type": "string"
            },
            "textsize": {
              "type": "string"
            },
            "trustServerCertificate": {
              "type": "boolean"
            },
            "useColumnNames": {
              "type": "boolean"
            },
            "useUTC": {
              "type": "boolean"
            }
          },
          "debug": {
            "type": "boolean"
          },
          "csvOptions": {
            "type": "object",
            "properties": {
              "objectMode": {
                "type": "boolean"
              },
              "headers": {
                "type": ["boolean", "array"]
              },
              "alwaysWriteHeaders": {
                "type": "boolean"
              },
              "delimiter": {
                "type": "string"
              },
              "rowDelimiter": {
                "type": "string"
              },
              "quote": {
                "type": "string"
              },
              "quoteColumns": {
                "type": ["boolean", "string"]
              },
              "quoteHeaders": {
                "type": ["boolean", "string"]
              },
              "escape": {
                "type": "string"
              },
              "includeEndRowDelimiter": {
                "type": "boolean"
              },
              "writeBOM": {
                "type": "boolean"
              }
            }
          }
        }
      },
      "params": {
        "oneOf": [
          {
            "type": "object",
            "required": ["id", "command"],
            "properties": {
              "id": {
                "type": "string"
              },
              "command": {
                "type": "string"
              },
              "args": {
                "type": "object"
              },
              "csvFileExport": {
                "type": "string"
              },
              "xlsxFileExport": {
                "type": "string"
              },
              "xlsxAuthorName": {
                "type": "string"
              },
              "xlsxSheetName": {
                "type": "string"
              },
              "fileExport": {
                "type": "string"
              }
            }
          },
          {
            "type": "object",
            "required": ["id", "command_file"],
            "properties": {
              "id": {
                "type": "string"
              },
              "command_file": {
                "type": "string"
              },
              "args": {
                "type": "object"
              },
              "csvFileExport": {
                "type": "string"
              },
              "xlsxFileExport": {
                "type": "string"
              },
              "xlsxAuthorName": {
                "type": "string"
              },
              "xlsxSheetName": {
                "type": "string"
              },
              "fileExport": {
                "type": "string"
              },
              "csvOptions": {
                "type": "object",
                "properties": {
                  "headers": {
                    "type": ["boolean", "array"]
                  },
                  "alwaysWriteHeaders": {
                    "type": "boolean"
                  },
                  "delimiter": {
                    "type": "string"
                  },
                  "rowDelimiter": {
                    "type": "string"
                  },
                  "quote": {
                    "type": "string"
                  },
                  "quoteColumns": {
                    "type": ["boolean", "string"]
                  },
                  "quoteHeaders": {
                    "type": ["boolean", "string"]
                  },
                  "escape": {
                    "type": "string"
                  },
                  "includeEndRowDelimiter": {
                    "type": "boolean"
                  },
                  "writeBOM": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        ]
      }
    }
  }
}
